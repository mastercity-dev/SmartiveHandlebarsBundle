<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="smartive_handlebars.templating.renderer" class="Smartive\HandelbarsBundle\Templating\Renderer" lazy="true">
            <argument type="service" id="file_locator" />
            <argument>%smartive_handlebars.templating.template_directories%</argument>
            <argument>%smartive_handlebars.templating.template_directories_recursive%</argument>
        </service>
    </services>
</container>
